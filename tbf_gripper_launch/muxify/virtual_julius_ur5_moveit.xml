<muxify>
  <!--
    script to start the ROS nodes for communication with a virtual machine of the UR5

  -->
  <session name="vjur5" mode="o" size="240x60"/>
  <window name="vjur5" directory="~">
    <layout>
      aabb
      aabb
      cdee
      fgee
    </layout>
    <cmd pane="f">roscore</cmd>
    <cmd pane="c">roslaunch --wait julius description.launch</cmd>
    <cmd pane="d">sleep 2;roslaunch --wait julius joint_state_pub.launch</cmd>
    <cmd pane="g">sleep 2;roslaunch --wait tbf_gripper_launch v_ur5_julius_ros_control.launch</cmd>
    <cmd pane="a">sleep 4;roslaunch --wait julius moveit.launch</cmd>
    <cmd pane="b">sleep 6;roslaunch --wait julius_moveit moveit_rviz.launch</cmd>

  </window>
  <window name="hand" directory="~">
    <layout>
      a
    </layout>
    <cmd pane="a">roslaunch --wait julius robotiq_hand</cmd>
  </window>


</muxify>